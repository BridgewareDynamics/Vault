# Ensure package-lock.json is always generated
package-lock=true

# Use modern peer dependency resolution (npm 7+)
legacy-peer-deps=false

# Ensure consistent lockfile version (matches current lockfileVersion 3)
lockfile-version=3

# Prefer fresh dependency resolution over cached packages
prefer-offline=false

# Disable audit during install (can be run separately with npm audit)
audit=false

# Ensure consistent dependency resolution across platforms
fund=false
progress=false

# Normalize paths to reduce OS-specific differences
# This helps ensure consistent lock files across Windows/Unix systems

